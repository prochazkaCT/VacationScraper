<div class="jumbotron">
  <h1 class="display-4">Welcome to a web scraping app!</h1>
  <p class="lead">Click the scrape button below to start searching for an adventure.</p>
  <img src="/images/adventure.png" alt="Find an adventure" class="img-responsive">
  <button class="btn btn-info btn-lg text-white" id="scrapeNow">Let's scrape!</button>
</div>

<br> {{# each articles }}
<div class="jumbotron">
  <div class="container">
    <div class="container">
      <div class="row">
        <div class="col-sm-10">
          <h5>
            <u>{{ this.title }}</u>
          </h5>
          <p>Article summary: {{ this.summary }}</p>
        </div>
        <div class="col-sm-2">
          <a href='{{ this.link }}' class="btn btn-warning btn-lg text-white" target="_blank">Article Link</a>
        </div>
      </div>

      <div class='row'>
        <div class="col-sm-8">
          <strong>Your thoughts about the article:</strong> {{this.note.body}}</p>
        </div>
      </div>
      <div class='row'>
        <div class="col-sm-8">
          <form class="create-form">
            <div class="form-group">
              <input type="text" id="notebody" name="body" placeholder="Thoughts go here...">
            </div>
            <div class="col-sm-2">
              <button data-id={{this.id}} type="submit" class="btn btn-info btn-lg">Add Note</button>
              <input type="hidden" class="articleAddId" name="articleAddId" value="{{this._id}}">
          </form>
          </div>
          <div class="col-sm-2">
            <form class='delete'>
              <input type="hidden" class="noteAddId" value="{{this.note._id}}">
              <button type="submit" class="btn btn-danger btn-lg">Delete Note</button>
            </form>
          </div>
        </div>
        <br>
      </div>
    </div>
  </div>
</div>
{{/each}}